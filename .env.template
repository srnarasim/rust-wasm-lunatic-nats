# Rust WASM Lunatic NATS - Environment Configuration Template
# Copy this file to .env and configure your settings
# cp .env.template .env

# =============================================================================
# NATS SERVER CONFIGURATION
# =============================================================================

# Native NATS server URL (TCP connection)
# Default: nats://localhost:4222
# Production example: nats://nats.your-company.com:4222
NATS_URL=nats://localhost:4222

# WebSocket NATS gateway URL (for WASM environments)
# Default: ws://localhost:8080
# Production example: wss://nats-ws.your-company.com:8080
NATS_WEBSOCKET_URL=ws://localhost:8080

# NATS connection timeout (seconds)
# Default: 10
NATS_TIMEOUT_SECONDS=10

# Maximum NATS reconnection attempts
# Default: 10, set to 0 for unlimited
NATS_MAX_RECONNECTS=10

# NATS reconnection delay (seconds)
# Default: 1
NATS_RECONNECT_DELAY_SECONDS=1

# =============================================================================
# LLM API CONFIGURATION
# =============================================================================

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Configuration  
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# LLM Provider Selection
# Options: "openai", "anthropic", "mock"
# Use "mock" for testing without API keys
LLM_PROVIDER=mock

# LLM Model Configuration
# OpenAI models: "gpt-4", "gpt-4-turbo", "gpt-3.5-turbo"
# Anthropic models: "claude-3-opus", "claude-3-sonnet", "claude-3-haiku"
LLM_MODEL=gpt-4

# Maximum tokens per LLM request
# Default: 1000
# OpenAI: up to 4096+ depending on model
# Anthropic: up to 4096+ depending on model
LLM_MAX_TOKENS=1000

# LLM request timeout (seconds)
# Default: 30
LLM_TIMEOUT_SECONDS=30

# LLM temperature setting (0.0 - 2.0)
# Lower values = more deterministic, higher values = more creative
# Default: 0.7
LLM_TEMPERATURE=0.7

# Enable LLM request retries on failure
# Default: true
LLM_ENABLE_RETRY=true

# Maximum LLM retry attempts
# Default: 3
LLM_MAX_RETRIES=3

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Rust log level
# Options: error, warn, info, debug, trace
# Default: info
RUST_LOG=info

# Force colored log output
# Options: auto, always, never
# Default: auto
RUST_LOG_STYLE=auto

# Application-specific log level
# Override for this crate specifically
# RUST_LOG=rust_wasm_lunatic_nats=debug

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Default agent memory backend
# Options: "memory", "file"
# Default: memory
AGENT_DEFAULT_MEMORY_BACKEND=memory

# File backend storage path (when using file backend)
# Default: ./agent_storage
AGENT_FILE_STORAGE_PATH=./agent_storage

# Default agent timeout (seconds)
# Default: 30
AGENT_DEFAULT_TIMEOUT_SECONDS=30

# Maximum concurrent agents
# Default: 100
AGENT_MAX_CONCURRENT=100

# Agent health check interval (seconds)
# Default: 60
AGENT_HEALTH_CHECK_INTERVAL_SECONDS=60

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable TLS for NATS connections
# Default: false (use true for production)
NATS_TLS_ENABLED=false

# NATS TLS certificate path (if TLS enabled)
# NATS_TLS_CERT_PATH=/path/to/cert.pem

# NATS TLS key path (if TLS enabled)  
# NATS_TLS_KEY_PATH=/path/to/key.pem

# NATS authentication token (if required)
# NATS_AUTH_TOKEN=your-auth-token

# NATS username/password (if required)
# NATS_USERNAME=your-username
# NATS_PASSWORD=your-password

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Enable development mode (more verbose logging, etc.)
# Default: false
DEV_MODE=false

# Mock LLM responses for testing
# Default: false (set to true when LLM_PROVIDER=mock)
LLM_USE_MOCK_RESPONSES=false

# Test data directory
# Default: ./test_data
TEST_DATA_DIR=./test_data

# Enable performance metrics collection
# Default: false
ENABLE_METRICS=false

# Metrics collection interval (seconds)
# Default: 30
METRICS_INTERVAL_SECONDS=30

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Application environment
# Options: development, staging, production
# Default: development
APP_ENV=development

# Enable graceful shutdown
# Default: true
ENABLE_GRACEFUL_SHUTDOWN=true

# Graceful shutdown timeout (seconds)
# Default: 30
GRACEFUL_SHUTDOWN_TIMEOUT_SECONDS=30

# Health check endpoint port (for monitoring)
# Default: 8080
# HEALTH_CHECK_PORT=8080

# Enable structured JSON logging (for production)
# Default: false
ENABLE_JSON_LOGGING=false

# =============================================================================
# DOCKER & CONTAINERIZATION
# =============================================================================

# Container timezone
# Default: UTC
TZ=UTC

# Container user (for security)
# Default: 1000:1000
# USER_ID=1000
# GROUP_ID=1000

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Enable OpenTelemetry tracing
# Default: false
ENABLE_OTEL=false

# OpenTelemetry collector endpoint
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Application version (for tracing)
# APP_VERSION=0.1.0

# Service name (for tracing)
# SERVICE_NAME=rust-wasm-lunatic-nats

